{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "types": ["vitest"],
    "baseUrl": "./",
    "target": "esnext",
    "allowJs": true,
    "composite": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
